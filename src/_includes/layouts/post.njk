---
layout: layouts/base.njk
---
<div class="flex flex-col lg:flex-row space-x-6">
  <div>
    <main class="post-content">

{% coverimage post, page.filePathStem, coverImage %}
<h1>{{ title }}</h1>

      <div class="post-metadata mt-4 mb-8 space-y-2">
        <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
        <div>
          {%- for tag in tags | filterTagList %}
            {%- set tagUrl %}/tags/{{ tag }}/{% endset %}
            <div class="badge badge-secondary badge-lg mb-1">
              <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
              {%- if not loop.last %}{% endif %}
            </div>
          {%- endfor %}
        </div>
      </div>
      
      {{ content | safe }}
    </main>

    <div class="my-12">
      {% include "../components/author-card.njk" %}
    </div>

    {% include "../components/related.njk" %}
  </div>
    <div class="min-w-[350px] w-[350px]">
    <div class="sticky top-20 flex flex-col space-y-6">
      <div>
        {% include "..//components/category-list.njk" %}
      </div>
    <div class="sticky top-20">
      {% set postslistTitle = "最近更新" %}
      {% set postslist = collections.recentPosts %}
      {% include "../components/side-postslist.njk" %}
    </div>
  </div>
</div>