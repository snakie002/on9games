<div class="flex flex-col space-y-1">
  <h1 class="text-2xl font-bold">{{ postslistTitle }}</h1>
  {% for post in postslist %}
    <div class="divider"></div>
    <a href="{{ post.url | url }}">
      <div class="card card-compact">
        <div class="card-body flex space-x-4 flex-row items-center !p-2">
          <div class="avatar">
            <div class="w-24 h-24 ounded object-cover">
              {% if post.data.coverImage %}
                {% coverimage post, post.data.title %}
              {% endif %}
            </div>
          </div>
          <div class="flex flex-col grow">
            <div class="mb-1">
              {% include "./category-badge.njk" %}
            </div>
            <a href="{{ post.url | url }}" class="flex flex-col grow">
              <div class="card-title text-5xl">
              </div>
          <div>
            <div class="card-title text-sm">
              <h4 class="line-clamp-3">{{ post.data.title }}</h4>
            </div>
          </div>
        </div>
      </div>
    </a>
  {% endfor %}
</div>